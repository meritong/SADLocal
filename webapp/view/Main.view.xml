<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="no.mil.ztravel.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Page
        id="page"
        titleAlignment="Center"
        title="{i18n>title}"
        floatingFooter="true"
    >
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                title="Generelt"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label text="SAD Timestamp" />
                    <HBox>
                        <Text
                            id="textUpdate"
                            text="{marcoPolo>/backend_timestamp}"
                            class="sapUiMediumMarginBottom"
                            busyIndicatorDelay="0"
                        />
                        <Button
                            id="butRefresh"
                            press="onPressRefresh"
                            type="Transparent"
                            icon="sap-icon://refresh"
                            class="sapUiTinyMarginBegin"
                        />
                    </HBox>

                    <Label
                        text="Reiseskjema"
                        required="true"
                    />
                    <Select
                        width="250px"
                        items="{marcoPolo>/reiseSkjema}"
                        forceSelection="false"
                        selectedKey="{initModel>/skjema}"
                        change=".onChangeSkjema"
                    >
                        <items>
                            <core:ListItem
                                key="{marcoPolo>key}"
                                text="{marcoPolo>text}"
                            />
                        </items>
                    </Select>
                    <Label text="Reisetype" />
                    <Select
                      id="selReiseType"
                        width="250px"
                        editable="{= ${initModel>/skjema} ? true : false }"
                        items="{marcoPolo>/reiseTyper}"
                        forceSelection="false"
                        
                    >
                        <items>
                            <core:ListItem
                                key="{marcoPolo>key}"
                                text="{marcoPolo>text}"
                            />
                        </items>
                    </Select>
                </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Lagre"
                    icon="sap-icon://save"
                />
                <Button
                    type="Emphasized"
                    text="Opprett reise"
                    icon="sap-icon://create-form"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
